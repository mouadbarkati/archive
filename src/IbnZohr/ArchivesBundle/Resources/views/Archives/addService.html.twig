{% extends 'IbnZohrArchivesBundle:Base:layout.html.twig' %}

{% block body %}
    <div class="row" style="height:40vh;width:80%;margin:auto;">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <!-- BEGIN SAMPLE FORM PORTLET-->
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption font-red-sunglo">
                                <i class="icon-settings font-red-sunglo"></i>
                                <span class="caption-subject bold uppercase"> Ajouter Archivage</span>
                            </div>
                        </div>

                        <div class="portlet-body form">
                            <form role="form" method="POST" action="{{ path('archives_addService') }}">
                                <div class="form-body">



                                    <div class="form-group">
                                        <label>Nom De Service</label>
                                        <div class="input-icon">
                                            <i class="fa fa-bell-o font-green"></i>
                                            <input type="text" name="service" class="form-control" placeholder="Nom De Service">
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label>description</label>
                                        <div class="input-icon">
                                            <i class="fa fa-bell-o font-green"></i>
                                            <input type="text" name="description" class="form-control"  placeholder="description">
                                        </div>
                                    </div>



                                    <input type="submit" class="btn green" value="Ajouter Service" />
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- END SAMPLE FORM PORTLET-->
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}